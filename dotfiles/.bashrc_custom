  alias l.='ls -Gd .*'
  alias ll='ls -Gl'
  alias ls='ls -G'
  alias g=/usr/local/bin/git
  alias git=/usr/local/bin/git
  export PATH="/usr/local/bin:/usr/local/sbin:${PATH}"
else
  #aliases that don't work on Mac
  alias l.='ls -d .* --color=auto'
  alias ll='ls -l --color=auto'
  alias ls='ls --color=auto'
  alias g='git'
fi
